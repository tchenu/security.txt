{
  "name": "security.txt",
  "version": "1.0.0",
  "description": "Chrome extension to know if a website has a security.txt file (https://securitytxt.org/).",
  "browser_action": {
    "default_icon": {
      "16": "images/not_secure_16.png",
      "48": "images/not_secure_48.png",
      "128": "images/not_secure_128.png"
    }
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": [
    "activeTab",
    "background"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "images/not_secure_16.png",
    "48": "images/not_secure_48.png",
    "128": "images/not_secure_128.png"
  },
  "manifest_version": 2
}